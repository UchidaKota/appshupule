<h3>フォロー中</h3>
{{#if followUsers}}
<table class="striped">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each followUsers}}
        <tr>
            <td><img src="{{image}}" class="circle"></td>
            <td><a href="/informations/user/{{_id}}">{{displayName}}</a></td>
            <td>
                <form action="" method="POST">
                    <input id="followButton" type="button" value="フォロー中" class="btn">
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>まだ誰もフォローしていません</p>
{{/if}}
<h3>あなたへのおすすめ</h3>
{{#if unFollowUsers}}
<table class="striped">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each unFollowUsers}}
        <tr>
            <td><img src="{{image}}" class="circle"></td>
            <td><a href="/informations/user/{{_id}}">{{displayName}}</a></td>
            <td>
                <form action="" method="POST">
                    <input id="followButton" type="button" value="フォローする" class="btn">
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>他にユーザーはいません</p>
{{/if}}

<script> 
    const informationId =  "{{information._id}}";
    const informationUserId = "{{information.user._id}}";
    const userId =  "{{userId}}";
    console.log()

    $('#followButton').click(function(e){
        var values = {
            toUserId: informationUserId,
            fromUserId: userId
        };
        console.log(values);
        $.ajax({
            url:"/follow/:toUserId/:fromUserId",
            type:"POST",
            data:values,
        }).done(function (results){
            document.getElementById("followButton").value=results.values;
            alert(results.msg);
        }).fail(function (xhr, textStatus, errorThrown){
            console.log("ajax通信に失敗しました");
        }).always(function (xhr){
        });
    });
</script>