<script defer src="/js/fileUpload.js"></script>
<h3>IT情報変更</h3>
<div class="row">
    <form action="/informations/{{information._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{information.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select information.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="keyword" name="keyword" value="{{information.keyword}}">
                <label for="keyword">キーワード</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>内容:</h5>
                <textarea id="body" name="body">{{information.body}}</textarea>
            </div>
        </div>

        <div class="row">
        {{#if information.coverImagePath}}
            <div class="col s6">
                <label>Cover</label>
                <img class="responsive-img" src="{{information.coverImagePath}}">
            </div>
        {{/if}}
            <div class="col s6">
                <label>Cover</label>
                <input type="file" name="cover" class="filepond">
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.17.1/ckeditor.js" integrity="sha512-VXEKi5eNc7ECuyIueuledlqeUWiJ7hcxBe9fnsCiVzeZ0XwJxAPemnq01/LBIBnp3i0szhvKNd9Us7fqNPsRmQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    CKEDITOR.replace('body', {
        plugins: 'wysiwygarea, toolbar, basicstyles, link'
    });
</script>